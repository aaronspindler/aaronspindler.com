# Test Environment Configuration
# This file contains environment variables for running tests with Docker Compose

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings_test
SECRET_KEY=test-secret-key-for-testing-only-not-for-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgres://test_user:test_password@postgres:5432/test_aaronspindler
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=test_aaronspindler
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# LocalStack/AWS Configuration
USE_LOCALSTACK=true
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_STORAGE_BUCKET_NAME=test-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=http://localstack:4566
AWS_S3_USE_SSL=false
AWS_S3_VERIFY=false

# Test Configuration
TEST_PARALLEL=4
TEST_KEEPDB=true

# Email Configuration (for testing)
EMAIL_BACKEND=django.core.mail.backends.locmem.EmailBackend
DEFAULT_FROM_EMAIL=test@example.com

# Logging
LOG_LEVEL=INFO

# Site Configuration
SITE_ID=1

# Security (disabled for testing)
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# Allowed Hosts (all for testing)
ALLOWED_HOSTS=*

# LocalStack Debug (set to 1 to enable LocalStack debug logs)
LOCALSTACK_DEBUG=0

# Python Settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

USE_DEV_CACHE_PREFIX=True
