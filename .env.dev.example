# Django Settings
SECRET_KEY=dev-secret-key-change-this-to-something-random
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings

# Database (PostgreSQL with TimescaleDB)
DATABASE_URL=postgres://feefifofunds_dev:dev_password_change_in_production@localhost:5434/feefifofunds_dev

# Redis & Caching
REDIS_URL=redis://localhost:6381/0
USE_DEV_CACHE_PREFIX=True

# Celery
CELERY_BROKER_URL=redis://localhost:6381/1
CELERY_RESULT_BACKEND=redis://localhost:6381/2

